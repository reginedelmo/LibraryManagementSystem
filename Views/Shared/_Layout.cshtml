<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ByteBooks</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand navbar-left" href="@Url.Action("Index", "Home")">
                        <img src="~/img/bytebooks - white text logo.svg" height="35" style="margin-top:-5px;">
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Books", "Index", "Books")</li>
                            <li>@Html.ActionLink("Borrows", "Index", "Borrows")</li>
                            <li>@Html.ActionLink("Account", "Index", "Users")</li>
                            @Html.ActionLink("Logout", "Logout", "Account", new { @style = "margin-left:10px; margin-right:10px", @class = "btn btn-default navbar-btn" })
                        }
                        else if (!User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Register","Home")" class="btn btn-primary navbar-btn" style="margin-left:10px; margin-right:10px">Register</a>
                            <a href="@Url.Action("Login","Home")" class="btn btn-default navbar-btn" style="margin-left:10px; margin-right:10px">Log In</a>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year ByteBooks</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
